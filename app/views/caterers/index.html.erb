<div>
  <div>
    <h1>
      List of all Caterers
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new Caterer
    </h2>

    <form action="/insert_caterer" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="neighborhood_id_box">
          Neighborhood
        </label>

        <select id="neighborhood_name_box" name="query_neighborhood_name">
          <% @list_of_neighborhoods.each do |a_neighborhood| %>
            <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="text" id="website_box" name="query_website">
      </div>
      
      <div>
        <label for="cuisine_id_box">
          Cuisine
        </label>

        <select id="cuisine_id_box" name="query_cuisine_name">
          <% @list_of_cuisines.each do |a_cuisine| %>
            <option value="<%= a_cuisine.name %>"><%= a_cuisine.name %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label for="contact_name_box">
          Contact name
        </label>

        <input type="text" id="contact_name_box" name="query_contact_name">
      </div>

      <div>
        <label for="contact_email_box">
          Contact email
        </label>

        <input type="email" id="contact_email_box" name="query_contact_email">
      </div>

      <div>
        <input type="checkbox" id="preferred_box" name="query_preferred" value="1">

        <label for="preferred_box">Preferred</label>
      </div>

      <div>
        <input type="checkbox" id="contacted_box" name="query_contacted" value="1">

        <label for="contacted_box">Contacted</label>
      </div>

      <div>
        <input type="checkbox" id="tried_box" name="query_tried" value="1">

        <label for="tried_box">Tried</label>
      </div>

      <div>
        <input type="checkbox" id="chosen_box" name="query_chosen" value="1">

        <label for="chosen_box">Chosen</label>
      </div>

      <div>
        <label for="price_options_box">
          Price options
        </label>

        <textarea id="price_options_box" name="query_price_options" rows="3"></textarea>
      </div>

      <div>
        <label for="photo_url_box">
          Photo url
        </label>

        <input type="text" id="photo_url_box" name="query_photo_url">
      </div>

      <div>
        <label for="pdf_box">
          PDF
        </label>

        <input type="file" id="pdf_box" name="query_pdf">
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes" rows="3"></textarea>
      </div>

      <div>
        <label for="deposit_box">
          Deposit %
        </label>

        <input type="number" id="deposit_box" name="query_deposit" value = "0">
      </div>

      <div>
        <label for="final_price_box">
          Final price $
        </label>

        <input type="number" id="final_price_box" name="query_final_price" value = "0">
      </div>

      <button>
        Create Caterer
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Lat
        </th>

        <th>
          Lng
        </th>

        <th>
          Neighborhood
        </th>

        <th>
          Website
        </th>

        <th>
          Cuisine
        </th>

        <th>
          Contact name
        </th>

        <th>
          Contact email
        </th>

        <th>
          Preferred
        </th>
        
        <th>
          Contacted
        </th>

        <th>
          Tried
        </th>

        <th>
          Chosen
        </th>
        
        <th>
          Price options
        </th>

        <th>
          Photo url
        </th>

        <th>
          PDF
        </th>

        <th>
          Notes
        </th>

        <th>
          Deposit
        </th>

        <th>
          Final price
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_caterers.each do |a_caterer| %>
      <tr>
        <td>
          <%= a_caterer.id %>
        </td>

        <td>
          <%= a_caterer.name %>
        </td>

        <td>
          <%= a_caterer.address %>
        </td>

        <td>
          <%= a_caterer.lat %>
        </td>

        <td>
          <%= a_caterer.lng %>
        </td>

        <td>
          <%= Neighborhood.where({ :id => a_caterer.neighborhood_id }).at(0).name %>
        </td>

        <td>
          <a href="<%= a_caterer.website %>"><%= a_caterer.website %></a>
        </td>

        <td>
          <%= Cuisine.where({ :id => a_caterer.cuisine_id }).at(0).name %>
        </td>

        <td>
          <%= a_caterer.contact_name %>
        </td>

        <td>
          <%= a_caterer.contact_email %>
        </td>

        <td>
          <%= a_caterer.preferred %>
        </td>

        <td>
          <%= a_caterer.contacted %>
        </td>

        <td>
          <%= a_caterer.tried %>
        </td>

        <td>
          <%= a_caterer.chosen %>
        </td>

        <td>
          <%= a_caterer.price_options %>
        </td>

        <td>
          <img src = "<%= a_caterer.photo_url %>"></a>
        </td>

        <td>
          <%= a_caterer.pdf %>
        </td>

        <td>
          <%= a_caterer.notes %>
        </td>

        <td>
          <%= a_caterer.deposit.round(0) %>%
        </td>

        <td>
          $<%= a_caterer.final_price.round(2) %>
        </td>

        <td>
          <%= time_ago_in_words(a_caterer.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_caterer.updated_at) %> ago
        </td>

        <td>
          <a href="/caterers/<%= a_caterer.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
