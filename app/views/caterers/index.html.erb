<div>
  <div class="container-fluid">
    <h1>
      List of all Caterers
    </h1>
  </div>
</div>

<hr>

<div class="accordion accordion-flush accordion-" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
        <h2>Add a New Caterer</h2>
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <div>
          <form action="/insert_caterer" method="post">
            <div>
              <label for="name_box">
                Name
              </label>

              <input type="text" id="name_box" name="query_name">
            </div>

            <div>
              <label for="address_box">
                Address
              </label>

              <input type="text" id="address_box" name="query_address">
            </div>

            <div>
              <label for="neighborhood_id_box">
                Neighborhood
              </label>

              <select id="neighborhood_name_box" name="query_neighborhood_name">
                <% @list_of_neighborhoods.each do |a_neighborhood| %>
                  <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
                <% end %>
              </select>
            </div>

            <div>
              <label for="website_box">
                Website
              </label>

              <input type="url" id="website_box" name="query_website">
            </div>
            
            <div>
              <label for="cuisine_id_box">
                Cuisine
              </label>

              <select id="cuisine_id_box" name="query_cuisine_name">
                <% @list_of_cuisines.each do |a_cuisine| %>
                  <option value="<%= a_cuisine.name %>"><%= a_cuisine.name %></option>
                <% end %>
              </select>
            </div>

            <div>
              <label for="contact_name_box">
                Contact Name
              </label>

              <input type="text" id="contact_name_box" name="query_contact_name">
            </div>

            <div>
              <label for="contact_email_box">
                Contact Email
              </label>

              <input type="email" id="contact_email_box" name="query_contact_email">
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="preferred_box" name="query_preferred" value="1">

              <label for="preferred_box">Preferred</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="contacted_box" name="query_contacted" value="1">

              <label for="contacted_box">Contacted</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="tried_box" name="query_tried" value="1">

              <label for="tried_box">Tried</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="chosen_box" name="query_chosen" value="1">

              <label for="chosen_box">Chosen</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="signed_contract_box" name="query_signed_contract" value="1">

              <label for="signed_contract_box">Signed Contract</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="paid_deposit_box" name="query_paid_deposit" value="1">

              <label for="paid_deposit_box">Paid Deposit</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="final_payment_box" name="query_final_payment" value="1">

              <label for="final_payment_box">Final Payment</label>
            </div>

            <div>
              <label for="price_options_box">
                Price Options
              </label>

              <textarea id="price_options_box" name="query_price_options" rows="3"></textarea>
            </div>

            <div>
              <label for="photo_url_box">
                Photo URL
              </label>

              <input type="text" id="photo_url_box" name="query_photo_url">
            </div>

            <div>
              <label for="pdf_box">
                PDF
              </label>

              <input type="file" id="pdf_box" name="query_pdf">
            </div>

            <div>
              <label for="notes_box">
                Notes
              </label>

              <textarea id="notes_box" name="query_notes" rows="3"></textarea>
            </div>

            <div>
              <label for="deposit_box">
                Deposit %
              </label>

              <input type="number" id="deposit_box" name="query_deposit" value = "0">
            </div>

            <div>
              <label for="final_price_box">
                Final Price $
              </label>

              <input type="number" id="final_price_box" name="query_final_price" value = "0">
            </div>

            <div style="height: 10px;"></div>

            <button type="submit" class="btn btn-primary btn-sm">
              Create Caterer
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div>
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover table-sm align-middle">
      <thead>
        <tr>
          <th>
            ID
          </th>

          <th>
            Name
          </th>

          <th>
            Address
          </th>

          <th>
            Neighborhood
          </th>

          <th>
            Website
          </th>

          <th>
            Cuisine
          </th>

          <th>
            Contact Name
          </th>

          <th>
            Contact Email
          </th>

          <th>
            Preferred
          </th>
          
          <th>
            Contacted
          </th>

          <th>
            Tried
          </th>

          <th>
            Chosen
          </th>
          
          <th>
            Signed Contract
          </th>

          <th>
            Paid Deposit
          </th>

          <th>
            Final Payment
          </th>

          <th>
            Price Options
          </th>

          <th>
            Photo URL
          </th>

          <th>
            PDF
          </th>

          <th>
            Notes
          </th>

          <th>
            Deposit
          </th>

          <th>
            Final Price
          </th>

          <th>
            Created at
          </th>

          <th>
            Updated at
          </th>

          <th>
          </th>
        </tr>
      </thead>

      <tbody class="table-group-divider">
        <% @list_of_caterers.each do |a_caterer| %>
          <tr>
            <td>
              <%= a_caterer.id %>
            </td>

            <td>
              <%= a_caterer.name %>
            </td>

            <td>
              <%= a_caterer.address %>
            </td>

            <td>
              <%= Neighborhood.where({ :id => a_caterer.neighborhood_id }).at(0).name %>
            </td>

            <td>
              <a href="<%= a_caterer.website %>"><%= a_caterer.website %></a>
            </td>

            <td>
              <%= Cuisine.where({ :id => a_caterer.cuisine_id }).at(0).name %>
            </td>

            <td>
              <%= a_caterer.contact_name %>
            </td>

            <td>
              <%= a_caterer.contact_email %>
            </td>

            <td style="text-align: center;">
              <% if a_caterer.preferred == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_caterer.contacted == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_caterer.tried == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_caterer.chosen == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_caterer.signed_contract == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_caterer.paid_deposit == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_caterer.final_payment == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td>
              <%= a_caterer.price_options %>
            </td>

            <td>
              <img src = "<%= a_caterer.photo_url %>" class="d-block mx-auto" style="width: auto; height: 200px;"></a>
            </td>

            <td>
              <%= a_caterer.pdf %>
            </td>

            <td>
              <%= a_caterer.notes %>
            </td>

            <td>
              <%= a_caterer.deposit.to_fs( :percentage, { :precision => 0 } ) %>
            </td>

            <td>
              <%= a_caterer.final_price.to_fs(:currency) %>
            </td>

            <td>
              <%= time_ago_in_words(a_caterer.created_at) %> ago
            </td>
            <td>
              <%= time_ago_in_words(a_caterer.updated_at) %> ago
            </td>

            <td>
              <a href="/caterers/<%= a_caterer.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      <tbody>
    </table>
  </div>
</div>

<hr>
