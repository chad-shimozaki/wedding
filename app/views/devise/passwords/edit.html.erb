<div class="container-fluid">

  <h2>Change Your Password</h2>

  <div class="container-fluid">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="inline-form-group">
        <%= f.label :password, "New Password" %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
        <span class="form-text" style="margin-left: 20px;"><%= @minimum_password_length %> characters minimum.</span>
        <% end %><br />
      </div>

      <div class="inline-form-group">
        <%= f.label :password_confirmation, "Confirm New Password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <span class="form-text" style="margin-left: 20px;">Passwords must match.</span>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class: "btn btn-danger" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
