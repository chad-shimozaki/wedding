<div>
  <div class="container-fluid">
    <h1>
      List of all Florists
    </h1>
  </div>
</div>

<hr>

<div class="accordion accordion-flush accordion-" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
        <h2>Add a New Florist</h2>
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <div>
          <form action="/insert_florist" method="post">
            <div>
              <label for="name_box">
                Name
              </label>

              <input type="text" id="name_box" name="query_name">
            </div>

            <div>
              <label for="address_box">
                Address
              </label>

              <input type="text" id="address_box" name="query_address">
            </div>

            <div>
              <label for="neighborhood_name_box">
                Neighborhood
              </label>

              <select id="neighborhood_name_box" name="query_neighborhood_name">
                <% @list_of_neighborhoods.each do |a_neighborhood| %>
                  <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
                <% end %>
              </select>
            </div>

            <div>
              <label for="website_box">
                Website
              </label>

              <input type="url" id="website_box" name="query_website">
            </div>

            <div>
              <label for="contact_name_box">
                Contact Name
              </label>

              <input type="text" id="contact_name_box" name="query_contact_name">
            </div>

            <div>
              <label for="email_box">
                Contact Email
              </label>

              <input type="email" id="email_box" name="query_contact_email">
            </div>

            <div>
              <input type="checkbox" id="contacted_box" name="query_contacted" value="1">

              <label for="contacted_box">Contacted</label>
            </div>

            <div>
              <input type="checkbox" id="chosen_box" name="query_chosen" value="1">

              <label for="chosen_box">Chosen</label>
            </div>

              <label for="signed_contract_box">Signed Contract</label>
            </div>

            <div>
              <input type="checkbox" id="paid_deposit_box" name="query_paid_deposit" value="1">

              <label for="paid_deposit_box">Paid Deposit</label>
            </div>

            <div>
              <input type="checkbox" id="final_payment_box" name="query_final_payment" value="1">

              <label for="final_payment_box">Final Payment</label>
            </div>

            <div>
              <label for="price_options_box">
                Price Options
              </label>

              <textarea id="price_options_box" name="query_price_options" rows="3"></textarea>
            </div>

            <div>
              <label for="notes_box">
                Notes
              </label>

              <textarea id="notes_box" name="query_notes" rows="3"></textarea>
            </div>

            <div>
              <label for="deposit_box">
                Deposit %
              </label>

              <input type="number" id="deposit_box" name="query_deposit" value = "0">
            </div>

            <div>
              <label for="final_price_box">
                Final Price $
              </label>

              <input type="number" id="final_price_box" name="query_final_price" value = "0">
            </div>

            <div style="height: 10px;"></div>

            <button type="submit" class="btn btn-primary btn-sm">
              Create Florist
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>
<div>
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover table-sm align-middle">
      <thead>
        <tr>
          <th>
            ID
          </th>

          <th>
            Name
          </th>

          <th>
            Address
          </th>

          <th>
            Neighborhood
          </th>

          <th>
            Website
          </th>

          <th>
            Contact Name
          </th>

          <th>
            Contact Email
          </th>

          <th>
            Contacted
          </th>

          <th>
            Chosen
          </th>

          <th>
            Signed Contract
          </th>

          <th>
            Paid Deposit
          </th>

          <th>
            Final Payment
          </th>

          <th>
            Price Options
          </th>

          <th>
            Notes
          </th>

          <th>
            Deposit
          </th>

          <th>
            Final Price
          </th>

          <th>
            Created at
          </th>

          <th>
            Updated at
          </th>

          <th>
          </th>
        </tr>
      </thead>

      <tbody class="table-group-divider">
        <% @list_of_florists.each do |a_florist| %>
          <tr>
            <td>
              <%= a_florist.id %>
            </td>

            <td>
              <%= a_florist.name %>
            </td>

            <td>
              <%= a_florist.address %>
            </td>

            <td>
            <%= Neighborhood.where({ :id => a_florist.neighborhood_id }).at(0).name %>
            </td>

            <td>
              <a href="<%= a_florist.website %>"><%= a_florist.website %></a>
            </td>

            <td>
              <%= a_florist.contact_name %>
            </td>

            <td>
              <%= a_florist.contact_email %>
            </td>

            <td style="text-align: center;">
              <% if a_florist.contacted == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_florist.chosen == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_florist.signed_contract == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_florist.paid_deposit == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_florist.final_payment == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td>
              <%= a_florist.price_options %>
            </td>

            <td>
              <%= a_florist.notes %>
            </td>

            <td>
              <%= a_florist.deposit.to_fs( :percentage, { :precision => 0 } ) %>
            </td>

            <td>
              <%= a_florist.final_price.to_fs(:currency) %>
            </td>

            <td>
              <%= time_ago_in_words(a_florist.created_at) %> ago
            </td>
            <td>
              <%= time_ago_in_words(a_florist.updated_at) %> ago
            </td>

            <td>
              <a href="/florists/<%= a_florist.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>
