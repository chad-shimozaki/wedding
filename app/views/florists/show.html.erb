<div>
  <div>
    <h1>
      Florist #<%= @the_florist.id %> details
    </h1>

    <div>
      <div>
        <a href="/florists">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_florist/<%= @the_florist.id %>">
          Delete Florist
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_florist.name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @the_florist.address %>
      </dd>

      <dt>
        Lat
      </dt>
      <dd>
        <%= @the_florist.lat %>
      </dd>

      <dt>
        Lng
      </dt>
      <dd>
        <%= @the_florist.lng %>
      </dd>

      <dt>
        Neighborhood
      </dt>
      <dd>
        <%= Neighborhood.where({ :id => @the_florist.neighborhood_id }).at(0).name %>
      </dd>

      <dt>
        Website
      </dt>
      <dd>
        <a href="<%= @the_florist.website %>"><%= @the_florist.website %></a>
      </dd>

      <dt>
        Contact Name
      </dt>
      <dd>
        <%= @the_florist.contact_name %>
      </dd>

      <dt>
        Contact Email
      </dt>
      <dd>
        <%= @the_florist.contact_email %>
      </dd>

      <dt>
        Contacted
      </dt>
      <dd>
        <%= @the_florist.contacted %>
      </dd>

      <dt>
        Chosen
      </dt>
      <dd>
        <%= @the_florist.chosen %>
      </dd>

      <dt>
        Price Options
      </dt>
      <dd>
        <%= @the_florist.price_options %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @the_florist.notes %>
      </dd>

      <dt>
        Deposit
      </dt>
      <dd>
        <%= @the_florist.deposit.to_fs( :percentage, { :precision => 0 } ) %>
      </dd>

      <dt>
        Final Price
      </dt>
      <dd>
        <%= @the_florist.final_price.to_fs(:currency) %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_florist.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_florist.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div class="container-fluid">
    <h2>
      Edit Florist
    </h2>

    <div style="height: 10px;"></div>

    <form action="/modify_florist/<%= @the_florist.id %>"  method="post" class="container-fluid">
      <div class="row mb-2">
        <label for="name_box" class="col-auto col-form-label">
          Name
        </label>

        <div class="col-auto">
          <input type="text" id="name_box" name="query_name" value="<%= @the_florist.name %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="address_box" class="col-auto col-form-label">
          Address
        </label>

        <div class="col-sm-4">
          <input type="text" id="address_box" name="query_address" value="<%= @the_florist.address %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="neighborhood_name_box" class="col-auto col-form-label">
          Neighborhood
        </label>

        <div class="col-auto col-form-label">
          <select id="neighborhood_name_box" name="query_neighborhood_name" value="<%= @the_florist_neighborhood.name %>">
            <% @list_of_neighborhoods.each do |a_neighborhood| %>
              <% if a_neighborhood.id == @the_florist.neighborhood_id%>
                <option value="<%= a_neighborhood.name %>" selected><%= a_neighborhood.name %></option>
              <% else %>
                <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
              <% end %>
              
            <% end %>
          </select>
        </div>
      </div>

      <div class="row mb-2">
        <label for="website_box" class="col-auto col-form-label">
          Website
        </label>

        <div class="col-sm-6">
          <input type="url" id="website_box" name="query_website" value="<%= @the_florist.website %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="contact_name_box" class="col-auto col-form-label">
          Contact Name
        </label>

        <div class="col-auto">
          <input type="text" id="contact_name_box" name="query_contact_name" value="<%= @the_florist.contact_name %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="contact_email_box" class="col-auto col-form-label">
          Contact Email
        </label>

        <div class="col-auto">
          <input type="email" id="contact_email_box" name="query_contact_email" value="<%= @the_florist.contact_email %>">
        </div>
      </div>

       <div>
        <input class="form-check-input" type="checkbox" id="contacted_box" name="query_contacted" value="1" <%= "checked" if @the_florist.contacted %>>

        <label class="form-check-label" for="contacted_box" class="col-auto col-form-label">
            Contacted
        </label>
      </div>

      <div>
        <input class="form-check-input" type="checkbox" id="chosen_box" name="query_chosen" value="1" <%= "checked" if @the_florist.chosen %>>

        <label class="form-check-label" for="chosen_box" class="col-auto col-form-label">
            Chosen
        </label>
      </div>

      <div class="row mb-2">
        <label for="price_options_box" class="col-auto col-form-label">
          Price Options
        </label>

        <div class="col-auto">
          <textarea id="price_options_box" name="query_price_options"><%= @the_florist.price_options %></textarea>
        </div>
      </div>

      <div class="row mb-2">
        <label for="notes_box" class="col-auto col-form-label">
          Notes
        </label>

        <div class="col-auto">
          <textarea id="notes_box" name="query_notes"><%= @the_florist.notes %></textarea>
        </div>
      </div>

      <div class="row mb-2">
        <label for="deposit_box" class="col-auto col-form-label">
          Deposit %
        </label>

        <div class="col-auto">
          <input type="text" id="deposit_box" name="query_deposit" value="<%= @the_florist.deposit.to_fs( :percentage, { :precision => 0 } ) %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="final_price_box" class="col-auto col-form-label">
          Final Price
        </label>

        <div class="col-auto">
          <input type="text" id="final_price_box" name="query_final_price" value="<%= @the_florist.final_price.to_fs(:currency) %>">
        </div>
      </div>

      <div style="height: 5px;"></div>

      <button type="submit" class="btn btn-primary btn-sm">
        Update Florist
      </button>
    </form>
  </div>

  <div style="height: 10px;"></div>

  <div>
    <form action="/delete_florist/<%= @the_florist.id %>"  method="get">
      <button type="submit" class="btn btn-danger btn-sm mx-4">
        Delete Florist
      </button>
    </form>
  </div>
</div>

<hr>
