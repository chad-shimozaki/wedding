<div>
  <div>
    <h1>
      Florist #<%= @the_florist.id %> details
    </h1>

    <div>
      <div>
        <a href="/florists">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_florist/<%= @the_florist.id %>">
          Delete Florist
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_florist.name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @the_florist.address %>
      </dd>

      <dt>
        Lat
      </dt>
      <dd>
        <%= @the_florist.lat %>
      </dd>

      <dt>
        Lng
      </dt>
      <dd>
        <%= @the_florist.lng %>
      </dd>

      <dt>
        Neighborhood
      </dt>
      <dd>
        <%= Neighborhood.where({ :id => @the_florist.neighborhood_id }).at(0).name %>
      </dd>

      <dt>
        Website
      </dt>
      <dd>
        <a href="<%= @the_florist.website %>"><%= @the_florist.website %></a>
      </dd>

      <dt>
        Contact name
      </dt>
      <dd>
        <%= @the_florist.contact_name %>
      </dd>

      <dt>
        Contact email
      </dt>
      <dd>
        <%= @the_florist.contact_email %>
      </dd>

      <dt>
        Contacted
      </dt>
      <dd>
        <%= @the_florist.contacted %>
      </dd>

      <dt>
        Chosen
      </dt>
      <dd>
        <%= @the_florist.chosen %>
      </dd>

      <dt>
        Price options
      </dt>
      <dd>
        <%= @the_florist.price_options %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @the_florist.notes %>
      </dd>

      <dt>
        Deposit
      </dt>
      <dd>
        <%= @the_florist.deposit.round(0) %>%
      </dd>

      <dt>
        Final price
      </dt>
      <dd>
        $<%= @the_florist.final_price.round(2) %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_florist.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_florist.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit Florist
    </h2>

    <form action="/modify_florist/<%= @the_florist.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_florist.name %>">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address" value="<%= @the_florist.address %>">
      </div>

      <div>
        <label for="neighborhood_name_box">
          Neighborhood
        </label>

        <select id="neighborhood_name_box" name="query_neighborhood_name" value="<%= @the_florist_neighborhood.name %>">
          <% @list_of_neighborhoods.each do |a_neighborhood| %>
            <% if a_neighborhood.id == @the_florist.neighborhood_id%>
              <option value="<%= a_neighborhood.name %>" selected><%= a_neighborhood.name %></option>
            <% else %>
              <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
            <% end %>
            
          <% end %>
        </select>
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="url" id="website_box" name="query_website" value="<%= @the_florist.website %>">
      </div>

      <div>
        <label for="contact_name_box">
          Contact name
        </label>

        <input type="text" id="contact_name_box" name="query_contact_name" value="<%= @the_florist.contact_name %>">
      </div>

      <div>
        <label for="contact_email_box">
          Contact email
        </label>

        <input type="email" id="contact_email_box" name="query_contact_email" value="<%= @the_florist.contact_email %>">
      </div>

      <div>
        <input type="checkbox" id="contacted_box" name="query_contacted" value="1" <%= "checked" if @the_florist.contacted %>>

        <label for="contacted_box">
            Contacted
        </label>
      </div>

      <div>
        <input type="checkbox" id="chosen_box" name="query_chosen" value="1" <%= "checked" if @the_florist.chosen %>>

        <label for="chosen_box">
            Chosen
        </label>
      </div>

      <div>
        <label for="price_options_box">
          Price options
        </label>

        <textarea id="price_options_box" name="query_price_options"><%= @the_florist.price_options %></textarea>
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes"><%= @the_florist.notes %></textarea>
      </div>

      <div>
        <label for="deposit_box">
          Deposit %
        </label>

        <input type="text" id="deposit_box" name="query_deposit" value="<%= @the_florist.deposit.round(0) %>">
      </div>

      <div>
        <label for="final_price_box">
          Final price $
        </label>

        <input type="text" id="final_price_box" name="query_final_price" value="<%= @the_florist.final_price.round(2) %>">
      </div>

      <button type="submit" class="btn btn-primary btn-sm">
        Update Florist
      </button>
    </form>
  </div>
</div>

<hr>
