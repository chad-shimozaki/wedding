<div>
  <div>
    <h1>
      Neighborhood #<%= @the_neighborhood.id %> details
    </h1>

    <div>
      <div>
        <a href="/neighborhoods">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_neighborhood/<%= @the_neighborhood.id %>">
          Delete Neighborhood
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_neighborhood.name %>
      </dd>
      
      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_neighborhood.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_neighborhood.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div class="container-fluid">
    <h2>
      Edit Neighborhood
    </h2>

    <div class="row mb-2">
      <label for="photo_url_box" class="col-auto col-form-label">
        Photo URL
      </label> 

      <div class="col-sm-10">
        <input class="form-control" type="text" id="photo_url_box" name="query_photo_url" value="<%= @the_neighborhood.photo_url %>">
      </div>
    </div>

    <div style="height: 5px;"></div>

    <form action="/modify_neighborhood/<%= @the_neighborhood.id %>"  method="post" class="container-fluid">
      <button type="submit" class="btn btn-primary btn-sm">
        Update Neighborhood
      </button>
    </form>
  </div>

  <div style="height: 10px;"></div>

  <div>
    <form action="/delete_neighborhood/<%= @the_neighborhood.id %>"  method="get">
      <button type="submit" class="btn btn-danger btn-sm mx-4">
        Delete Neighborhood
      </button>
    </form>
  </div>
</div>

<hr>
