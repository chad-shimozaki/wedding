<div>
  <div>
    <h1>
      List of all Neighborhoods
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new Neighborhood
    </h2>

    <form action="/insert_neighborhood" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>
      
      <button type="submit" class="btn btn-primary btn-sm">
        Create Neighborhood
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table class="table table-bordered table-striped table-hover">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_neighborhoods.each do |a_neighborhood| %>
      <tr>
        <td>
          <%= a_neighborhood.id %>
        </td>

         <td>
          <%= a_neighborhood.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_neighborhood.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_neighborhood.updated_at) %> ago
        </td>

        <td>
          <a href="/neighborhoods/<%= a_neighborhood.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
