<div>
  <div class="container-fluid">
    <h1>
      List of all Venues
    </h1>
  </div>
</div>

<hr>

<div class="container-fluid">
  <div>
    <h2>
      Add a new Venue
    </h2>

    <form action="/insert_venue" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="neighborhood_id_box">
          Neighborhood
        </label>

        <select id="neighborhood_name_box" name="query_neighborhood_name">
          <% @list_of_neighborhoods.each do |a_neighborhood| %>
            <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label for="capacity_box">
          Capacity
        </label>

        <input type="number" id="capacity_box" name="query_capacity">
      </div>

      <div>
        <label for="venue_type_box">
          Venue type
        </label>

        <input type="text" id="venue_type_box" name="query_venue_type">
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="url" id="website_box" name="query_website">
      </div>

      <div>
        <label for="contact_name_box">
          Contact name
        </label>

        <input type="text" id="contact_name_box" name="query_contact_name">
      </div>

      <div>
        <label for="contact_email_box">
          Contact email
        </label>

        <input type="email" id="contact_email_box" name="query_contact_email">
      </div>

      <div>
        <input type="checkbox" id="contacted_box" name="query_contacted" value="1">

        <label for="contacted_box">Contacted</label>
      </div>

      <div>
        <input type="checkbox" id="visited_box" name="query_visited" value="1">

        <label for="visited_box">Visited</label>
      </div>

      <div>
        <input type="checkbox" id="chosen_box" name="query_chosen" value="1">

        <label for="chosen_box">Chosen</label>
      </div>

      <div>
        <input type="checkbox" id="signed_contract_box" name="query_signed_contract" value="1">
        <label for="signed_contract_box">Signed Contract</label>
      </div>

      <div>
        <input type="checkbox" id="paid_deposit_box" name="query_paid_deposit" value="1">

        <label for="paid_deposit_box">Paid Deposit</label>
      </div>

      <div>
        <input type="checkbox" id="final_payment_box" name="query_final_payment" value="1">

        <label for="final_payment_box">Final Payment</label>
      </div>

      <div>
        <label for="price_options_box">
          Price options
        </label>

        <textarea id="price_options_box" name="query_price_options" rows="3"></textarea>
      </div>

      <div>
        <label for="photo_url_box">
          Photo url
        </label>

        <input type="text" id="photo_url_box" name="query_photo_url">
      </div>

      <div>
        <label for="pdf_box">
          PDF
        </label>

        <input type="file" id="pdf_box" name="query_pdf">
      </div>

      <div>
        <label for="deposit_box">
          Deposit
        </label>

        <input type="number" id="deposit_box" name="query_deposit" value="0">
      </div>

      <div>
        <label for="final_price_box">
          Final price
        </label>

        <input type="number" id="final_price_box" name="query_final_price" value="0">
      </div>

      <div>
        <label for="events_count_box">
          Events count
        </label>

        <input type="number" id="events_count_box" name="query_events_count">
      </div>

      <div style="height: 10px;"></div>

      <button type="submit" class="btn btn-primary btn-sm">
        Create Venue
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>

          <th>
            Name
          </th>

          <th>
            Address
          </th>

          <th>
            Neighborhood
          </th>

          <th>
            Capacity
          </th>

          <th>
            Venue type
          </th>

          <th>
            Website
          </th>

          <th>
            Contact name
          </th>

          <th>
            Contact email
          </th>

          <th>
            Contacted
          </th>

          <th>
            Visited
          </th>

          <th>
            Chosen
          </th>

          <th>
            Signed Contract
          </th>

          <th>
            Paid Deposit
          </th>

          <th>
            Final Payment
          </th>

          <th>
            Price options
          </th>

          <th>
            Photo url
          </th>

          <th>
            PDF
          </th>
    
          <th>
            Deposit %
          </th>

          <th>
            Final price $
          </th>

          <th>
            Events count
          </th>

          <th>
            Created at
          </th>

          <th>
            Updated at
          </th>

          <th>
          </th>
        </tr>
      </thead>

      <tbody class="table-group-divider">
        <% @list_of_venues.each do |a_venue| %>
        <tr>
          <td>
            <%= a_venue.id %>
          </td>

          <td>
            <%= a_venue.name %>
          </td>

          <td>
            <%= a_venue.address %>
          </td>

          <td>
            <%= Neighborhood.where({ :id => a_venue.neighborhood_id }).at(0).name %>
          </td>

          <td>
            <%= a_venue.capacity %>
          </td>

          <td>
            <%= a_venue.venue_type %>
          </td>

          <td>
            <a href="<%= a_venue.website %>"><%= a_venue.website %></a>
          </td>

          <td>
            <%= a_venue.contact_name %>
          </td>

          <td>
            <%= a_venue.contact_email %>
          </td>

          <td style="text-align: center;">
              <% if a_venue.contacted == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_venue.visited == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_venue.chosen == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_venue.signed_contract == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_venue.paid_deposit == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_venue.final_payment == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

          <td>
            <%= a_venue.price_options %>
          </td>

          <td>
            <img src = "<%= a_venue.photo_url %>" class="d-block mx-auto" style="width: auto; height: 200px;"></a>
          </td>

          <td>
            <%= a_venue.pdf %>
          </td>

          <td>
            <%= a_venue.deposit.round(0) %>%
          </td>

          <td>
            $<%= a_venue.final_price.round(2) %>
          </td>

          <td>
            <%= a_venue.events_count %>
          </td>

          <td>
            <%= time_ago_in_words(a_venue.created_at) %> ago
          </td>
          <td>
            <%= time_ago_in_words(a_venue.updated_at) %> ago
          </td>

          <td>
            <a href="/venues/<%= a_venue.id %>">
              Show details
            </a>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>
