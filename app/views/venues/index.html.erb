<div>
  <div>
    <h1>
      List of all venues
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new venue
    </h2>

    <form action="/insert_venue" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="contact_name_box">
          Contact name
        </label>

        <input type="text" id="contact_name_box" name="query_contact_name">
      </div>

      <div>
        <label for="neighborhood_id_box">
          Neighborhood
        </label>

        <input type="text" id="neighborhood_id_box" name="query_neighborhood_id">
      </div>

      <div>
        <label for="capacity_box">
          Capacity
        </label>

        <input type="text" id="capacity_box" name="query_capacity">
      </div>

      <div>
        <label for="venue_type_box">
          Venue type
        </label>

        <input type="text" id="venue_type_box" name="query_venue_type">
      </div>

      <div>
        <label for="price_options_box">
          Price options
        </label>

        <textarea id="price_options_box" name="query_price_options" rows="3"></textarea>
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="text" id="website_box" name="query_website">
      </div>

      <div>
        <label for="photo_url_box">
          Photo url
        </label>

        <input type="text" id="photo_url_box" name="query_photo_url">
      </div>

      <div>
        <label for="pdf_box">
          PDF
        </label>

        <input type="file" id="pdf_box" name="query_pdf">
      </div>

      <div>
        <input type="checkbox" id="contacted_box" name="query_contacted" value="1">

        <label for="contacted_box">Contacted</label>
      </div>

      <div>
        <input type="checkbox" id="visited_box" name="query_visited" value="1">

        <label for="visited_box">Visited</label>
      </div>

      <div>
        <input type="checkbox" id="chosen_box" name="query_chosen" value="1">

        <label for="chosen_box">Chosen</label>
      </div>

      <div>
        <label for="final_price_box">
          Final price
        </label>

        <input type="text" id="final_price_box" name="query_final_price">
      </div>

      <div>
        <label for="events_count_box">
          Events count
        </label>

        <input type="text" id="events_count_box" name="query_events_count">
      </div>

      <button>
        Create venue
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Lat
        </th>

        <th>
          Lng
        </th>

        <th>
          Contact name
        </th>

        <th>
          Neighborhood
        </th>

        <th>
          Capacity
        </th>

        <th>
          Venue type
        </th>

        <th>
          Price options
        </th>

        <th>
          Website
        </th>

        <th>
          Photo url
        </th>

        <th>
          PDF
        </th>

        <th>
          Contacted
        </th>

        <th>
          Visited
        </th>

        <th>
          Chosen
        </th>

        <th>
          Final price
        </th>

        <th>
          Events count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_venues.each do |a_venue| %>
      <tr>
        <td>
          <%= a_venue.id %>
        </td>

        <td>
          <%= a_venue.name %>
        </td>

        <td>
          <%= a_venue.address %>
        </td>

        <td>
          <%= a_venue.lat %>
        </td>

        <td>
          <%= a_venue.lng %>
        </td>

        <td>
          <%= a_venue.contact_name %>
        </td>

        <td>
          <%= a_venue.neighborhood_id %>
        </td>

        <td>
          <%= a_venue.capacity %>
        </td>

        <td>
          <%= a_venue.venue_type %>
        </td>

        <td>
          <%= a_venue.price_options %>
        </td>

        <td>
          <%= a_venue.website %>
        </td>

        <td>
          <%= a_venue.photo_url %>
        </td>

        <td>
          <%= a_venue.pdf %>
        </td>

        <td>
          <%= a_venue.contacted %>
        </td>

        <td>
          <%= a_venue.visited %>
        </td>

        <td>
          <%= a_venue.chosen %>
        </td>

        <td>
          <%= a_venue.final_price %>
        </td>

        <td>
          <%= a_venue.events_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_venue.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_venue.updated_at) %> ago
        </td>

        <td>
          <a href="/venues/<%= a_venue.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
