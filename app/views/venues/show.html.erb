<div>
  <div>
    <h1>
      Venue #<%= @the_venue.id %> details
    </h1>

    <div>
      <div>
        <a href="/venues">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_venue/<%= @the_venue.id %>">
          Delete Venue
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_venue.name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @the_venue.address %>
      </dd>

      <dt>
        Neighborhood
      </dt>
      <dd>
       <%= Neighborhood.where({ :id => @the_venue.neighborhood_id }).at(0).name %>
      </dd>

      <dt>
        Capacity
      </dt>
      <dd>
        <%= @the_venue.capacity %>
      </dd>

      <dt>
        Venue type
      </dt>
      <dd>
        <%= @the_venue.venue_type %>
      </dd>

      <dt>
        Website
      </dt>
      <dd>
        <a href="<%= @the_venue.website %>"><%= @the_venue.website %></a>
      </dd>

      <dt>
        Contact name
      </dt>
      <dd>
        <%= @the_venue.contact_name %>
      </dd>

      <dt>
        Contact email
      </dt>
      <dd>
        <%= @the_venue.contact_email %>
      </dd>

      <dt>
        Contacted
      </dt>
      <dd>
        <%= @the_venue.contacted %>
      </dd>

      <dt>
        Visited
      </dt>
      <dd>
        <%= @the_venue.visited %>
      </dd>

      <dt>
        Chosen
      </dt>
      <dd>
        <%= @the_venue.chosen %>
      </dd>

      <dt>
        Price options
      </dt>
      <dd>
        <%= @the_venue.price_options %>
      </dd>

      <dt>
        Photo url
      </dt>
      <dd>
        <%= @the_venue.photo_url %>
      </dd>

      <dt>
        PDF
      </dt>
      <dd>
        <%= @the_venue.pdf %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @the_venue.notes %>
      </dd>

      <dt>
        Deposit
      </dt>
      <dd>
        <%= @the_venue.deposit.to_fs( :percentage, { :precision => 0 } ) %>
      </dd>

      <dt>
        Final price
      </dt>
      <dd>
        <%= @the_venue.final_price.to_fs(:currency) %>
      </dd>

      <dt>
        Events count
      </dt>
      <dd>
        <%= @the_venue.events_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_venue.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_venue.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit Venue
    </h2>

    <form action="/modify_venue/<%= @the_venue.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_venue.name %>">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address" value="<%= @the_venue.address %>">
      </div>

      <div>
        <label for="neighborhood_id_box">
          Neighborhood
        </label>

        <select id="neighborhood_name_box" name="query_neighborhood_name" value="<%= @the_venue_neighborhood.name %>">
          <% @list_of_neighborhoods.each do |a_neighborhood| %>
            <% if a_neighborhood.id == @the_venue.neighborhood_id%>
              <option value="<%= a_neighborhood.name %>" selected><%= a_neighborhood.name %></option>
            <% else %>
              <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
            <% end %>
            
          <% end %>
        </select>
      </div>

      <div>
        <label for="capacity_box">
          Capacity
        </label>

        <input type="text" id="capacity_box" name="query_capacity" value="<%= @the_venue.capacity %>">
      </div>

      <div>
        <label for="venue_type_box">
          Venue type
        </label>

        <input type="text" id="venue_type_box" name="query_venue_type" value="<%= @the_venue.venue_type %>">
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="url" id="website_box" name="query_website" value="<%= @the_venue.website %>">
      </div>

      <div>
        <label for="contact_name_box">
          Contact name
        </label>

        <input type="text" id="contact_name_box" name="query_contact_name" value="<%= @the_venue.contact_name %>">
      </div>

      <div>
        <label for="contact_email_box">
          Contact email
        </label>

        <input type="email" id="contact_email_box" name="query_contact_email" value="<%= @the_venue.contact_email %>">
      </div>

      <div>
        <input type="checkbox" id="contacted_box" name="query_contacted" value="1" <%= "checked" if @the_venue.contacted %>>

        <label for="contacted_box">
            Contacted
        </label>
      </div>

      <div>
        <input type="checkbox" id="visited_box" name="query_visited" value="1" <%= "checked" if @the_venue.visited %>>

        <label for="visited_box">
            Visited
        </label>
      </div>

      <div>
        <input type="checkbox" id="chosen_box" name="query_chosen" value="1" <%= "checked" if @the_venue.chosen %>>

        <label for="chosen_box">
            Chosen
        </label>
      </div>

      <div>
        <label for="price_options_box">
          Price options
        </label>

        <textarea id="price_options_box" name="query_price_options"><%= @the_venue.price_options %></textarea>
      </div>

      <div>
        <label for="photo_url_box">
          Photo url
        </label>

        <input type="text" id="photo_url_box" name="query_photo_url" value="<%= @the_venue.photo_url %>">
      </div>

      <div>
        <label for="pdf_box">
          PDF
        </label>

        <input type="file" id="pdf_box" name="query_pdf" value="<%= @the_venue.pdf %>">
      </div>

      <div>
        <label for="deposit_box">
          Deposit %
        </label>

        <input type="text" id="deposit_box" name="query_deposit" value="<%= @the_venue.deposit.round(2) %>">
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea type="text" id="notes_box" name="query_notes" value="<%= @the_venue.notes %>"></textarea>
      </div>

      <div>
        <label for="final_price_box">
          Final price $
        </label>

        <input type="text" id="final_price_box" name="query_final_price" value="<%= @the_venue.final_price.to_fs(:currency) %>">
      </div>

      <div>
        <label for="events_count_box">
          Events count
        </label>

        <input type="text" id="events_count_box" name="query_events_count" value="<%= @the_venue.events_count %>">
      </div>

      <button type="submit" class="btn btn-primary btn-sm">
        Update venue
      </button>
    </form>
  </div>
</div>

<hr>
