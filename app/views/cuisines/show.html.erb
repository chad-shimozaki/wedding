<div>
  <div class="container-fluid">
      <a href="/cuisines" class="btn btn-light custom-hide">
        <i class="fas fa-arrow-left"></i> Back
      </a>
  </div>
  <div>
    <div class="vendor-title">
      <%= @the_cuisine.name %>
    </div>

    <div style="height: 10px;"></div>

    <div class="d-flex flex-wrap gap-3 mb-3">
        <% if @the_cuisine.photo_url.blank? %>
        <% else %>
        <img src = "<%= @the_cuisine.photo_url %>" class="d-block mx-auto" style="width: auto; height: 200px;"></a>
        <% end %>
    </div>
  </div>
</div>

<hr>


<div>
  <div class="container-fluid">
    <h2>
      Edit Cuisine
    </h2>

    <div style="height: 10px;"></div>

    <form action="/modify_cuisine/<%= @the_cuisine.id %>"  method="post" class="container-fluid">
      <div class="row mb-2">
        <label for="name_box" class="col-auto col-form-label">
          Name
        </label>

        <div class="col-auto">
          <input class="form-control" type="text" id="name_box" name="query_cuisine_name" value="<%= @the_cuisine.name %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="photo_url_box" class="col-auto col-form-label">
          Photo URL
        </label> 

        <div class="col-sm-10">
          <input class="form-control" type="text" id="photo_url_box" name="query_photo_url" value="<%= @the_cuisine.photo_url %>">
        </div>
      </div>

      <div style="height: 5px;"></div>

      <button type="submit" class="btn btn-primary btn-sm">
        Update Cuisine
      </button>
    </form>
  </div>

  <div style="height: 10px;"></div>

  <div>
    <form action="/delete_cuisine/<%= @the_cuisine.id %>"  method="get">
      <button type="submit" class="btn btn-danger btn-sm mx-4">
        Delete Cuisine
      </button>
    </form>
  </div>
</div>

<hr>
