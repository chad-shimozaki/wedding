<div>
  <div>
    <h1>
      Lighting & Production Company #<%= @the_lighting_production_company.id %> details
    </h1>

    <div>
      <div>
        <a href="/lighting_production_companies">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_lighting_production_company/<%= @the_lighting_production_company.id %>">
          Delete Lighting Production Company
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_lighting_production_company.name %>
      </dd>

      <dt>
        Website
      </dt>
      <dd>
        <a href="<%= @the_lighting_production_company.website %>"><%= @the_lighting_production_company.website %></a>
      </dd>

      <dt>
        Contact Name
      </dt>
      <dd>
        <%= @the_lighting_production_company.contact_name %>
      </dd>

      <dt>
        Contact Email
      </dt>
      <dd>
        <%= @the_lighting_production_company.contact_email %>
      </dd>

      <dt>
        Contacted
      </dt>
      <dd>
        <%= @the_lighting_production_company.contacted %>
      </dd>

      <dt>
        Chosen
      </dt>
      <dd>
        <%= @the_lighting_production_company.chosen %>
      </dd>

      <dt>
        Price Options
      </dt>
      <dd>
        <%= @the_lighting_production_company.price_options %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @the_lighting_production_company.notes %>
      </dd>

      <dt>
        Deposit
      </dt>
      <dd>
        <%= @the_lighting_production_company.deposit.to_fs( :percentage, { :precision => 0 } ) %>
      </dd>

      <dt>
        Final Price
      </dt>
      <dd>
        <%= @the_lighting_production_company.final_price.to_fs(:currency) %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_lighting_production_company.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_lighting_production_company.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div class="container-fluid">
    <h2>
      Edit Lighting & Production Company
    </h2>

    <div style="height: 10px;"></div>

    <form action="/modify_lighting_production_company/<%= @the_lighting_production_company.id %>"  method="post" class="container-fluid">
      <div class="row mb-2">
        <label for="name_box" class="col-auto col-form-label">
          Name
        </label>

        <div class="col-auto">
          <input class="form-control" type="text" id="name_box" name="query_name" value="<%= @the_lighting_production_company.name %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="website_box" class="col-auto col-form-label">
          Website
        </label>

        <div class="col-sm-6">
          <input class="form-control" type="url" id="website_box" name="query_website" value="<%= @the_lighting_production_company.website %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="photo_url_box" class="col-auto col-form-label">
          Photo URL
        </label> 

        <div class="col-sm-10">
          <input class="form-control" type="text" id="photo_url_box" name="query_photo_url" value="<%= @the_lighting_production_company.photo_url %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="contact_name_box" class="col-auto col-form-label">
          Contact Name
        </label>

        <div class="col-auto">
          <input class="form-control" type="text" id="contact_name_box" name="query_contact_name" value="<%= @the_lighting_production_company.contact_name %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="contact_email_box" class="col-auto col-form-label">
          Contact Name
        </label>

        <div class="col-auto">
          <input class="form-control" type="email" id="contact_email_box" name="query_contact_email" value="<%= @the_lighting_production_company.contact_email %>">
        </div>
      </div>

      <div>
        <input class="form-check-input" type="checkbox" id="contacted_box" name="query_contacted" value="1" <%= "checked" if @the_lighting_production_company.contacted %>>

        <label class="form-check-label" for="contacted_box" class="col-auto col-form-label">
            Contacted
        </label>
      </div>

      <div>
        <input class="form-check-input" type="checkbox" id="chosen_box" name="query_chosen" value="1" <%= "checked" if @the_lighting_production_company.chosen %>>

        <label class="form-check-label" for="chosen_box" class="col-auto col-form-label">
            Chosen
        </label>
      </div>

      <div class="row mb-2">
        <label for="price_options_box" class="col-auto col-form-label">
          Price Options
        </label>

        <div class="col-auto">
          <textarea class="form-control" id="price_options_box" name="query_price_options"><%= @the_lighting_production_company.price_options %></textarea>
        </div>
      </div>

      <div class="row mb-2">
        <label for="notes_box" class="col-auto col-form-label">
          Notes
        </label>

        <div class="col-auto">
          <textarea class="form-control" id="notes_box" name="query_notes"><%= @the_lighting_production_company.notes %></textarea>
        </div>
      </div>

      <div class="row mb-2">
        <label for="deposit_box" class="col-auto col-form-label">
          Deposit %
        </label>

        <div class="col-auto">
          <input class="form-control" type="number" id="deposit_box" name="query_deposit" value="<%= @the_lighting_production_company.deposit.to_fs( :percentage, { :precision => 0 } ) %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="final_price_box" class="col-auto col-form-label">
          Final Price
        </label>

        <div class="col-auto">
          <input class="form-control" type="number" id="final_price_box" name="query_final_price" value="<%= @the_lighting_production_company.final_price.to_fs(:currency) %>">
        </div>
      </div>

      <div style="height: 5px;"></div>

      <button type="submit" class="btn btn-primary btn-sm">
        Update Lighting & Production Company
      </button>
    </form>
  </div>

  <div style="height: 10px;"></div>

  <div>
    <form action="/delete_lighting_production_company/<%= @the_lighting_production_company.id %>"  method="get">
      <button type="submit" class="btn btn-danger btn-sm mx-4">
        Delete Lighting & Production Company
      </button>
    </form>
  </div>
</div>

<hr>
