<div>
  <div class="container-fluid">
    <h1>
      List of all Meals
    </h1>
  </div>
</div>

<hr>

<div class="container-fluid">
  <div>
    <h2>
      Add a new Meal
    </h2>

    <form action="/insert_meal" method="post">

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="caterer_id_box">
          Caterer
        </label>

        <select id="caterer_id_box" name="query_caterer_name">
            <option value=""></option>
          <% @list_of_caterers.each do |a_caterer| %>
            <option value="<%= a_caterer.name %>"><%= a_caterer.name %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label for="event_id_box">
          Event
        </label>

        <select id="event_id_box" name="query_event_name">
            <option value=""></option>
          <% @list_of_events.each do |an_event| %>
            <option value="<%= an_event.name %>"><%= an_event.name %></option>
          <% end %>
        </select>
      </div>

      <div style="height: 10px;"></div>

      <button type="submit" class="btn btn-primary btn-sm">
        Create Meal
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>

          <th>
            Name
          </th>

          <th>
            Caterer
          </th>

          <th>
            Event
          </th>

          <th>
            Created at
          </th>

          <th>
            Updated at
          </th>

          <th>
          </th>
        </tr>
      </thead>

      <tbody class="table-group-divider">
        <% @list_of_meals.each do |a_meal| %>
          <tr>
            <td>
              <%= a_meal.id %>
            </td>

            <td>
              <%= a_meal.name %>
            </td>

            <td>
              <%= a_meal.caterer_id %>
            </td>

            <td>
              <%= a_meal.event_id %>
            </td>

            <td>
              <%= time_ago_in_words(a_meal.created_at) %> ago
            </td>
            <td>
              <%= time_ago_in_words(a_meal.updated_at) %> ago
            </td>

            <td>
              <a href="/meals/<%= a_meal.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>
