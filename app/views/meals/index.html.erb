<div>
  <div>
    <h1>
      List of all meals
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new meal
    </h2>

    <form action="/insert_meal" method="post">
      <div>
        <label for="caterer_id_box">
          Caterer
        </label>

        <input type="text" id="caterer_id_box" name="query_caterer_id">
      </div>

      <div>
        <label for="event_id_box">
          Event
        </label>

        <input type="text" id="event_id_box" name="query_event_id">
      </div>

      <button>
        Create meal
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Caterer
        </th>

        <th>
          Event
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_meals.each do |a_meal| %>
      <tr>
        <td>
          <%= a_meal.id %>
        </td>

        <td>
          <%= a_meal.caterer_id %>
        </td>

        <td>
          <%= a_meal.event_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_meal.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_meal.updated_at) %> ago
        </td>

        <td>
          <a href="/meals/<%= a_meal.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
