<div>
  <div>
    <h1>
      List of all Hotels
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new Hotel
    </h2>

    <form action="/insert_hotel" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="neighborhood_name_box">
          Neighborhood
        </label>

        <select id="neighborhood_name_box" name="query_neighborhood_name">
          <% @list_of_neighborhoods.each do |a_neighborhood| %>
            <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="url" id="website_box" name="query_website">
      </div>

      <div>
        <label for="contact_name_box">
          Contact name
        </label>

        <input type="text" id="contact_name_box" name="query_contact_name">
      </div>

      <div>
        <label for="contact_email_box">
          Contact email
        </label>

        <input type="email" id="contact_email_box" name="query_contact_email">
      </div>

      <div>
        <input type="checkbox" id="contacted_box" name="query_contacted" value="1">

        <label for="contacted_box">Contacted</label>
      </div>

      <div>
        <input type="checkbox" id="chosen_box" name="query_chosen" value="1">

        <label for="chosen_box">Chosen</label>
      </div>

      <div>
        <input type="checkbox" id="block_discount_box" name="query_block_discount" value="1">

        <label for="block_discount_box">Block discount</label>
      </div>

      <div>
        <label for="minimum_rooms_box">
          Minimum rooms
        </label>

        <input type="number" id="minimum_rooms_box" name="query_minimum_rooms" value="0">
      </div>

      <div>
        <label for="price_options_box">
          Price options
        </label>

        <textarea id="price_options_box" name="query_price_options" rows="3"></textarea>
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes" rows="3"></textarea>
      </div>

      <button type="button" class="btn btn-primary btn-sm">
        Create Hotel
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Lat
        </th>

        <th>
          Lng
        </th>

        <th>
          Neighborhood
        </th>

        <th>
          Website
        </th>

        <th>
          Contact name
        </th>

        <th>
          Contact email
        </th>

        <th>
          Contacted
        </th>

        <th>
          Chosen
        </th>

        <th>
          Block discount
        </th>

        <th>
          Minimum rooms
        </th>

        <th>
          Price options
        </th>

        <th>
          Notes
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_hotels.each do |a_hotel| %>
      <tr>
        <td>
          <%= a_hotel.id %>
        </td>

        <td>
          <%= a_hotel.name %>
        </td>

        <td>
          <%= a_hotel.address %>
        </td>

        <td>
          <%= a_hotel.lat %>
        </td>

        <td>
          <%= a_hotel.lng %>
        </td>

        <td>
          <%= Neighborhood.where({ :id => a_hotel.neighborhood_id }).at(0).name %>
        </td>

        <td>
          <a href="<%= a_hotel.website %>"><%= a_hotel.website %></a>
        </td>

        <td>
          <%= a_hotel.contact_name %>
        </td>

        <td>
          <%= a_hotel.contact_email %>
        </td>

        <td>
          <%= a_hotel.contacted %>
        </td>

        <td>
          <%= a_hotel.chosen %>
        </td>

        <td>
          <%= a_hotel.block_discount %>
        </td>

        <td>
          <%= a_hotel.minimum_rooms.round(0) %>
        </td>

        <td>
          <%= a_hotel.price_options %>
        </td>

        <td>
          <%= a_hotel.notes %>
        </td>

        <td>
          <%= time_ago_in_words(a_hotel.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_hotel.updated_at) %> ago
        </td>

        <td>
          <a href="/hotels/<%= a_hotel.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
