<div>
  <div class="container-fluid">
    <h1>
      List of all Hotels
    </h1>
  </div>
</div>

<hr>

<div class="accordion accordion-flush accordion-" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
        <h2>Add a New Hotel</h2>
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <div>
          <form action="/insert_hotel" method="post">
            <div>
              <label for="name_box" class="col-auto col-form-label">
                Name
              </label>

              <input type="text" id="name_box" name="query_name">
            </div>

            <div>
              <label for="address_box" class="col-auto col-form-label">
                Address
              </label>

              <input type="text" id="address_box" name="query_address">
            </div>

            <div>
              <label for="neighborhood_name_box" class="col-auto col-form-label">
                Neighborhood
              </label>

              <select id="neighborhood_name_box" name="query_neighborhood_name">
                <% @list_of_neighborhoods.each do |a_neighborhood| %>
                  <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
                <% end %>
              </select>
            </div>

            <div>
              <label for="website_box" class="col-auto col-form-label">
                Website
              </label>

              <input type="url" id="website_box" name="query_website">
            </div>

            <div>
              <label for="contact_name_box" class="col-auto col-form-label">
                Contact Name
              </label>

              <input type="text" id="contact_name_box" name="query_contact_name">
            </div>

            <div>
              <label for="contact_email_box" class="col-auto col-form-label">
                Contact Email
              </label>

              <input type="email" id="contact_email_box" name="query_contact_email">
            </div>

            <div>
              <input class="form-check-label" class="form-check-input" type="checkbox" id="contacted_box" name="query_contacted" value="1">

              <label for="contacted_box" class="col-auto col-form-label">Contacted</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="chosen_box" name="query_chosen" value="1">

              <label class="form-check-label" for="chosen_box" class="col-auto col-form-label">Chosen</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="block_discount_box" name="query_block_discount" value="1">

              <label class="form-check-label" for="block_discount_box" class="col-auto col-form-label">Block discount</label>
            </div>

            <div>
              <label for="minimum_rooms_box" class="col-auto col-form-label">
                Minimum rooms
              </label>

              <input type="number" id="minimum_rooms_box" name="query_minimum_rooms" value="0">
            </div>

            <div>
              <label for="price_options_box" class="col-auto col-form-label">
                Price Options
              </label>

              <textarea id="price_options_box" name="query_price_options" rows="3"></textarea>
            </div>

            <div>
              <label for="notes_box" class="col-auto col-form-label">
                Notes
              </label>

              <textarea id="notes_box" name="query_notes" rows="3"></textarea>
            </div>

            <div style="height: 10px;"></div>

            <button type="submit" class="btn btn-primary btn-sm">
              Create Hotel
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>
<div>
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover table-sm align-middle">
      <thead>
        <tr>
          <th>
            ID
          </th>

          <th>
            Name
          </th>

          <th>
            Address
          </th>

          <th>
            Neighborhood
          </th>

          <th>
            Website
          </th>

          <th>
            Contact Name
          </th>

          <th>
            Contact Email
          </th>

          <th>
            Contacted
          </th>

          <th>
            Chosen
          </th>

          <th>
            Block discount
          </th>

          <th>
            Minimum rooms
          </th>

          <th>
            Price Options
          </th>

          <th>
            Notes
          </th>

          <th>
            Created at
          </th>

          <th>
            Updated at
          </th>

          <th>
          </th>
        </tr>
      </thead>

      <tbody class="table-group-divider">
        <% @list_of_hotels.each do |a_hotel| %>
          <tr>
            <td>
              <%= a_hotel.id %>
            </td>

            <td>
              <%= a_hotel.name %>
            </td>

            <td>
              <%= a_hotel.address %>
            </td>

            <td>
              <%= Neighborhood.where({ :id => a_hotel.neighborhood_id }).at(0).name %>
            </td>

            <td>
              <a href="<%= a_hotel.website %>"><%= a_hotel.website %></a>
            </td>

            <td>
              <%= a_hotel.contact_name %>
            </td>

            <td>
              <%= a_hotel.contact_email %>
            </td>

            <td>
              <%= a_hotel.contacted %>
            </td>

            <td>
              <%= a_hotel.chosen %>
            </td>

            <td>
              <%= a_hotel.block_discount %>
            </td>

            <td>
              <%= a_hotel.minimum_rooms.round(0) %>
            </td>

            <td>
              <%= a_hotel.price_options %>
            </td>

            <td>
              <%= a_hotel.notes %>
            </td>

            <td>
              <%= time_ago_in_words(a_hotel.created_at) %> ago
            </td>
            <td>
              <%= time_ago_in_words(a_hotel.updated_at) %> ago
            </td>

            <td>
              <a href="/hotels/<%= a_hotel.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>
