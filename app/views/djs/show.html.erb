<div>
  <div>
    <h1>
      DJ #<%= @the_dj.id %> details
    </h1>

    <div>
      <div>
        <a href="/djs">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_dj/<%= @the_dj.id %>">
          Delete DJ
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_dj.name %>
      </dd>

      <dt>
        Contact Email
      </dt>
      <dt>
          <%= @the_dj.contact_email %>
      </dt>

      <dt>
        Website
      </dt>
      <dd>
        <a href="<%= @the_dj.website %>"><%= @the_dj.website %></a>
      </dd>

      <dt>
        Contacted
      </dt>
      <dd>
        <%= @the_dj.contacted %>
      </dd>

      <dt>
        Chosen
      </dt>
      <dd>
        <%= @the_dj.chosen %>
      </dd>

      <dt>
        Price options
      </dt>
      <dd>
        <%= @the_dj.price_options %>
      </dd>

      <dt>
        Photo url
      </dt>
      <dd>
        <%= @the_dj.photo_url %>
      </dd>

      <dt>
        PDF
      </dt>
      <dd>
        <%= @the_dj.pdf %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @the_dj.notes %>
      </dd>

      <dt>
        Deposit
      </dt>
      <dd>
        <%= @the_dj.deposit.to_fs( :percentage, { :precision => 0 } ) %>
      </dd>

      <dt>
        Final price
      </dt>
      <dd>
        <%= @the_dj.final_price.to_fs(:currency) %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_dj.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_dj.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit DJ
    </h2>

    <form action="/modify_dj/<%= @the_dj.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_dj.name %>">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="email" id="email_box" name="query_email" value="<%= @the_dj.contact_email %>">
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="url" id="website_box" name="query_website" value="<%= @the_dj.website %>">
      </div>

      <div>
        <input type="checkbox" id="contacted_box" name="query_contacted" value="1" <%= "checked" if @the_dj.contacted %>>

        <label for="contacted_box">
            Contacted
        </label>
      </div>

      <div>
        <input type="checkbox" id="chosen_box" name="query_chosen" value="1" <%= "checked" if @the_dj.chosen %>>

        <label for="chosen_box">
            Chosen
        </label>
      </div>

      <div>
        <label for="price_options_box">
          Price options
        </label>

        <textarea id="price_options_box" name="query_price_options"><%= @the_dj.price_options %></textarea>
      </div>

      <div>
        <label for="photo_url_box">
          Photo url
        </label>

        <input type="text" id="photo_url_box" name="query_photo_url" value="<%= @the_dj.photo_url %>">
      </div>

      <div>
        <label for="pdf_box">
          PDF
        </label>

        <input type="file" id="pdf_box" name="query_pdf" value="<%= @the_dj.pdf %>">
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes"><%= @the_dj.notes %></textarea>
      </div>

      <div>
        <label for="deposit_box">
          Deposit %%
        </label>

        <input type="text" id="deposit_box" name="query_deposit" value="<%= @the_dj.deposit.to_fs( :percentage, { :precision => 0 } ) %>">
      </div>

      <div>
        <label for="final_price_box">
          Final price $
        </label>

        <input type="text" id="final_price_box" name="query_final_price" value="<%= @the_dj.final_price.to_fs(:currency) %>">
      </div>

      <button type="submit" class="btn btn-primary btn-sm">
        Update DJ
      </button>
    </form>
  </div>
</div>

<hr>
