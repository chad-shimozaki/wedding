<div>
  <div>
    <h1>
      DJ #<%= @the_dj.id %> details
    </h1>

    <div>
      <div>
        <a href="/djs">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_dj/<%= @the_dj.id %>">
          Delete DJ
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_dj.name %>
      </dd>

      <dt>
        Contact Email
      </dt>
      <dt>
          <%= @the_dj.contact_email %>
      </dt>

      <dt>
        Website
      </dt>
      <dd>
        <a href="<%= @the_dj.website %>"><%= @the_dj.website %></a>
      </dd>

      <dt>
        Contacted
      </dt>
      <dd>
        <%= @the_dj.contacted %>
      </dd>

      <dt>
        Chosen
      </dt>
      <dd>
        <%= @the_dj.chosen %>
      </dd>

      <dt>
        Price Options
      </dt>
      <dd>
        <%= @the_dj.price_options %>
      </dd>

      <dt>
        Photo URL
      </dt>
      <dd>
        <%= @the_dj.photo_url %>
      </dd>

      <dt>
        PDF
      </dt>
      <dd>
        <%= @the_dj.pdf %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @the_dj.notes %>
      </dd>

      <dt>
        Deposit
      </dt>
      <dd>
        <%= @the_dj.deposit.to_fs( :percentage, { :precision => 0 } ) %>
      </dd>

      <dt>
        Final Price
      </dt>
      <dd>
        <%= @the_dj.final_price.to_fs(:currency) %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_dj.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_dj.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div class="container-fluid">
    <h2>
      Edit DJ
    </h2>

    <div style="height: 10px;"></div>

    <form action="/modify_dj/<%= @the_dj.id %>"  method="post" class="container-fluid">
      <div class="row mb-2">
        <label for="name_box" class="col-auto col-form-label">
          Name
        </label>

        <div class="col-auto">
          <input type="text" id="name_box" name="query_name" value="<%= @the_dj.name %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="email_box" class="col-auto col-form-label">
          Email
        </label>

        <div class="col-auto">
          <input type="email" id="email_box" name="query_contact_email" value="<%= @the_dj.contact_email %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="website_box" class="col-auto col-form-label">
          Website
        </label>

        <div class="col-auto">
          <input type="url" id="website_box" name="query_website" value="<%= @the_dj.website %>">
        </div>
      </div>

      <div class="row mb-2">
        <input class="form-check-input" type="checkbox" id="contacted_box" name="query_contacted" value="1" <%= "checked" if @the_dj.contacted %>>

        <label for="contacted_box" class="col-auto col-form-label">
            Contacted
        </label>
      </div>

      <div class="row mb-2">
        <input class="form-check-input" type="checkbox" id="chosen_box" name="query_chosen" value="1" <%= "checked" if @the_dj.chosen %>>

        <label for="chosen_box" class="col-auto col-form-label">
            Chosen
        </label>
      </div>

       <div class="row mb-2">
        <label for="price_options_box" class="col-auto col-form-label">
          Price Options
        </label>

        <div class="col-auto">
          <textarea id="price_options_box" name="query_price_options"><%= @the_dj.price_options %></textarea>
        </div>
      </div>

      <div class="row mb-2">
        <label for="photo_url_box" class="col-auto col-form-label">
          Photo URL
        </label>

        <div class="col-sm-10">
          <input type="text" id="photo_url_box" name="query_photo_url" value="<%= @the_dj.photo_url %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="pdf_box" class="col-auto col-form-label">
          PDF
        </label>

        <div class="col-auto">
          <input type="file" id="pdf_box" name="query_pdf" value="<%= @the_dj.pdf %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="notes_box" class="col-auto col-form-label">
          Notes
        </label>

        <div class="col-auto">
          <textarea id="notes_box" name="query_notes"><%= @the_dj.notes %></textarea>
        </div>
      </div>

      <div class="row mb-2">
        <label for="deposit_box" class="col-auto col-form-label">
          Deposit %
        </label>

        <div class="col-auto">
          <input type="text" id="deposit_box" name="query_deposit" value="<%= @the_dj.deposit.to_fs( :percentage, { :precision => 0 } ) %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="final_price_box" class="col-auto col-form-label">
          Final Price
        </label>

        <div class="col-auto">
          <input type="text" id="final_price_box" name="query_final_price" value="<%= @the_dj.final_price.to_fs(:currency) %>">
        </div>
      </div>

      <div style="height: 5px;"></div>

      <button type="submit" class="btn btn-primary btn-sm">
        Update DJ
      </button>
    </form>
  </div>

  <div style="height: 10px;"></div>

  <div>
    <form action="/delete_dj/<%= @the_dj.id %>"  method="get">
      <button type="submit" class="btn btn-danger btn-sm mx-4">
        Delete DJ
      </button>
    </form>
  </div>
</div>

<hr>
