<div>
  <div class="container-fluid">
    <h1>
      List of all DJs
    </h1>
  </div>
</div>

<hr>

<div class="container-fluid">
  <div>
    <h2>
      Add a new DJ
    </h2>

    <form action="/insert_dj" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="email_box">
          Contact Email
        </label>

        <input type="email" id="email_box" name="query_contact_email">
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="url" id="website_box" name="query_website">
      </div>

      <div>
        <input type="checkbox" id="contacted_box" name="query_contacted" value="1">

        <label for="contacted_box">Contacted</label>
      </div>

      <div>
        <input type="checkbox" id="chosen_box" name="query_chosen" value="1">

        <label for="chosen_box">Chosen</label>
      </div>

        <label for="signed_contract_box">Signed Contract</label>
      </div>

      <div>
        <input type="checkbox" id="paid_deposit_box" name="query_paid_deposit" value="1">

        <label for="paid_deposit_box">Paid Deposit</label>
      </div>

      <div>
        <input type="checkbox" id="final_payment_box" name="query_final_payment" value="1">

        <label for="final_payment_box">Final Payment</label>
      </div>

      <div>
        <label for="price_options_box">
          Price options
        </label>

        <textarea id="price_options_box" name="query_price_options" rows="3"></textarea>
      </div>

      <div>
        <label for="photo_url_box">
          Photo url
        </label>

        <input type="text" id="photo_url_box" name="query_photo_url">
      </div>

      <div>
        <label for="pdf_box">
          PDF
        </label>

        <input type="file" id="pdf_box" name="query_pdf">
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes" rows="3"></textarea>
      </div>

      <div>
        <label for="deposit_box">
          Deposit %
        </label>

        <input type="number" id="deposit_box" name="query_deposit" value = "0">
      </div>

      <div>
        <label for="final_price_box">
          Final price $
        </label>

        <input type="number" id="final_price_box" name="query_final_price" value = "0">
      </div>

      <div style="height: 10px;"></div>

      <button type="submit" class="btn btn-primary btn-sm">
        Create DJ
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover table-sm align-middle">
      <thead>
        <tr>
          <th>
            ID
          </th>

          <th>
            Name
          </th>

          <th>
            Contact email
          </th>

          <th>
            Website
          </th>

          <th>
            Contacted
          </th>

          <th>
            Chosen
          </th>

          <th>
            Signed Contract
          </th>

          <th>
            Paid Deposit
          </th>

          <th>
            Final Payment
          </th>

          <th>
            Price options
          </th>

          <th>
            Photo url
          </th>

          <th>
            PDF
          </th>

          <th>
            Notes
          </th>

          <th>
            Deposit %
          </th>

          <th>
            Final price $
          </th>

          <th>
            Created at
          </th>

          <th>
            Updated at
          </th>

          <th>
          </th>
        </thead>
      </tr>

      <tbody class="table-group-divider">
        <% @list_of_djs.each do |a_dj| %>
          <tr>
            <td>
              <%= a_dj.id %>
            </td>

            <td>
              <%= a_dj.name %>
            </td>

            <td>
              <%= a_dj.contact_email %>
            </td>

            <td>
              <a href="<%= a_dj.website %>"><%= a_dj.website %></a>
            </td>

            <td style="text-align: center;">
              <% if a_dj.contacted == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_dj.chosen == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_dj.signed_contract == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_dj.paid_deposit == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_dj.final_payment == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td>
              <%= a_dj.price_options %>
            </td>

            <td>
              <img src = "<%= a_dj.photo_url %>" class="d-block mx-auto" style="width: auto; height: 200px;"></a>
            </td>

            <td>
              <%= a_dj.pdf %>
            </td>

            <td>
              <%= a_dj.notes %>
            </td>

            <td>
              <%= a_dj.deposit.to_fs( :percentage, { :precision => 0 } ) %>
            </td>

            <td>
              <%= a_dj.final_price.to_fs(:currency) %>
            </td>

            <td>
              <%= time_ago_in_words(a_dj.created_at) %> ago
            </td>
            <td>
              <%= time_ago_in_words(a_dj.updated_at) %> ago
            </td>

            <td>
              <a href="/djs/<%= a_dj.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>
