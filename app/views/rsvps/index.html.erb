<div>
  <div>
    <h1>
      List of all rsvps
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new rsvp
    </h2>

    <form action="/insert_rsvp" method="post">
      <div>
        <label for="invite_id_box" class="col-auto col-form-label">
          Invite
        </label>

        <input class="form-control" type="text" id="invite_id_box" name="query_invite_id">
      </div>

      <div>
        <label for="event_id_box" class="col-auto col-form-label">
          Event
        </label>

        <input class="form-control" type="text" id="event_id_box" name="query_event_id">
      </div>

      <div>
        <label for="people_id_box" class="col-auto col-form-label">
          People
        </label>

        <input class="form-control" type="text" id="people_id_box" name="query_people_id">
      </div>

      <div style="height: 10px;"></div>

      <button type="submit" class="btn btn-primary btn-sm">
        Create rsvp
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div class="table-responsive m-3">
    <table class="table table-bordered table-striped table-hover table-sm align-middle">
      <tr>
        <th>
          ID
        </th>

        <th>
          Invite
        </th>

        <th>
          Event
        </th>

        <th>
          People
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_rsvps.each do |a_rsvp| %>
      <tr>
        <td>
          <%= a_rsvp.id %>
        </td>

        <td>
          <%= a_rsvp.invite_id %>
        </td>

        <td>
          <%= a_rsvp.event_id %>
        </td>

        <td>
          <%= a_rsvp.people_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_rsvp.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_rsvp.updated_at) %> ago
        </td>

        <td>
          <a href="/rsvps/<%= a_rsvp.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
