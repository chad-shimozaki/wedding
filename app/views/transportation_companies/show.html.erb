<div>
  <div>
    <h1>
      Transportation Company #<%= @the_transportation_company.id %> details
    </h1>

    <div>
      <div>
        <a href="/transportation_companies">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_transportation_company/<%= @the_transportation_company.id %>">
          Delete Transportation Company
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_transportation_company.name %>
      </dd>

      <dt>
        Website
      </dt>
      <dd>
        <a href="<%= @the_transportation_company.website %>"><%= @the_transportation_company.website %></a>
      </dd>

      <dt>
        Contact name
      </dt>
      <dd>
        <%= @the_transportation_company.contact_name %>
      </dd>

      <dt>
        Contact email
      </dt>
      <dd>
        <%= @the_transportation_company.contact_email %>
      </dd>

      <dt>
        Neighborhood
      </dt>
      <dd>
        <%= Neighborhood.where({ :id => @the_transportation_company.neighborhood_id }).at(0).name %>
      </dd>

      <dt>
        Contacted
      </dt>
      <dd>
        <%= @the_transportation_company.contacted %>
      </dd>

      <dt>
        Chosen
      </dt>
      <dd>
        <%= @the_transportation_company.chosen %>
      </dd>

      <dt>
        Price options
      </dt>
      <dd>
        <%= @the_transportation_company.price_options %>
      </dd>

      <dt>
        Deposit
      </dt>
      <dd>
        <%= @the_transportation_company.deposit.to_fs( :percentage, { :precision => 0 } ) %>
      </dd>

      <dt>
        Final price
      </dt>
      <dd>
        <%= @the_transportation_company.final_price.to_fs(:currency) %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @the_transportation_company.notes %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_transportation_company.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_transportation_company.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit Transportation Company
    </h2>

    <form action="/modify_transportation_company/<%= @the_transportation_company.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_transportation_company.name %>">
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="url" id="website_box" name="query_website" value="<%= @the_transportation_company.website %>">
      </div>

      <div>
        <label for="contact_name_box">
          Contact name
        </label>

        <input type="text" id="contact_name_box" name="query_contact_name" value="<%= @the_transportation_company.contact_name %>">
      </div>

      <div>
        <label for="contact_email_box">
          Contact email
        </label>

        <input type="email" id="contact_email_box" name="query_contact_email" value="<%= @the_transportation_company.contact_email %>">
      </div>

      <div>
        <label for="neighborhood_id_box">
          Neighborhood
        </label>

        <select id="neighborhood_name_box" name="query_neighborhood_name" value="<%= @the_transportation_company_neighborhood.name %>">
          <% @list_of_neighborhoods.each do |a_neighborhood| %>
            <% if a_neighborhood.id == @the_transportation_company.neighborhood_id%>
              <option value="<%= a_neighborhood.name %>" selected><%= a_neighborhood.name %></option>
            <% else %>
              <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
            <% end %>
            
          <% end %>
        </select>
      </div>

      <div>
        <input type="checkbox" id="contacted_box" name="query_contacted" value="1" <%= "checked" if @the_transportation_company.contacted %>>

        <label for="contacted_box">
            Contacted
        </label>
      </div>

      <div>
        <input type="checkbox" id="chosen_box" name="query_chosen" value="1" <%= "checked" if @the_transportation_company.chosen %>>

        <label for="chosen_box">
            Chosen
        </label>
      </div>

      <div>
        <label for="price_options_box">
          Price options
        </label>

        <textarea id="price_options_box" name="query_price_options"><%= @the_transportation_company.price_options %></textarea>
      </div>

      <div>
        <label for="deposit_box">
          Deposit %
        </label>

        <input type="number" id="deposit_box" name="query_deposit" value="<%= @the_transportation_company.deposit.to_fs( :percentage, { :precision => 0 } ) %>">
      </div>

      <div>
        <label for="final_price_box">
          Final price $
        </label>

        <input type="number" id="final_price_box" name="query_final_price" value="<%= @the_transportation_company.final_price.to_fs(:currency) %>">
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes"><%= @the_transportation_company.notes %></textarea>
      </div>

      <button type="submit" class="btn btn-primary btn-sm">
        Update Transportation Company
      </button>
    </form>
  </div>
</div>

<hr>
