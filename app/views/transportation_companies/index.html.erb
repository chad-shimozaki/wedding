<div>
  <div class="container-fluid">
    <h1>
      List of all Transportation Companies
    </h1>
  </div>
</div>

<hr>

<div class="container-fluid">
  <div>
    <h2>
      Add a new Transportation Company
    </h2>

    <form action="/insert_transportation_company" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="url" id="website_box" name="query_website">
      </div>

      <div>
        <label for="contact_name_box">
          Contact name
        </label>

        <input type="text" id="contact_name_box" name="query_contact_name">
      </div>

      <div>
        <label for="contact_email_box">
          Contact email
        </label>

        <input type="email" id="contact_email_box" name="query_contact_email">
      </div>

      <div>
        <label for="neighborhood_id_box">
          Neighborhood
        </label>

        <select id="neighborhood_name_box" name="query_neighborhood_name">
          <% @list_of_neighborhoods.each do |a_neighborhood| %>
            <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
          <% end %>
        </select>
      </div>

      <div>
        <input type="checkbox" id="contacted_box" name="query_contacted" value="1">

        <label for="contacted_box">Contacted</label>
      </div>

      <div>
        <input type="checkbox" id="chosen_box" name="query_chosen" value="1">

        <label for="chosen_box">Chosen</label>
      </div>

        <label for="signed_contract_box">Signed Contract</label>
      </div>

      <div>
        <input type="checkbox" id="paid_deposit_box" name="query_paid_deposit" value="1">

        <label for="paid_deposit_box">Paid Deposit</label>
      </div>

      <div>
        <input type="checkbox" id="final_payment_box" name="query_final_payment" value="1">

        <label for="final_payment_box">Final Payment</label>
      </div>

      <div>
        <label for="price_options_box">
          Price options
        </label>

        <textarea id="price_options_box" name="query_price_options" rows="3"></textarea>
      </div>

      <div>
        <label for="deposit_box">
          Deposit
        </label>

        <input type="number" id="deposit_box" name="query_deposit" value="0">
      </div>

      <div>
        <label for="final_price_box">
          Final price
        </label>

        <input type="number" id="final_price_box" name="query_final_price" value="0">
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes" rows="3"></textarea>
      </div>

      <div style="height: 10px;"></div>

      <button type="submit" class="btn btn-primary btn-sm">
        Create Transportation Company
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>

          <th>
            Name
          </th>

          <th>
            Website
          </th>

          <th>
            Contact name
          </th>

          <th>
            Contact email
          </th>

          <th>
            Neighborhood
          </th>

          <th>
            Contacted
          </th>

          <th>
            Chosen
          </th>

          <th>
            Price options
          </th>

          <th>
            Deposit
          </th>

          <th>
            Final price
          </th>

          <th>
            Notes
          </th>

          <th>
            Created at
          </th>

          <th>
            Updated at
          </th>

          <th>
          </th>
        </tr>
      </thead>

      <tbody class="table-group-divider">
        <% @list_of_transportation_companies.each do |a_transportation_company| %>
          <tr>
            <td>
              <%= a_transportation_company.id %>
            </td>

            <td>
              <%= a_transportation_company.name %>
            </td>

            <td>
              <a href="<%= a_transportation_company.website %>"><%= a_transportation_company.website %></a>
            </td>

            <td>
              <%= a_transportation_company.contact_name %>
            </td>

            <td>
              <%= a_transportation_company.contact_email %>
            </td>

            <td>
              <%= Neighborhood.where({ :id => a_transportation_company.neighborhood_id }).at(0).name %>
            </td>

            <td>
              <%= a_transportation_company.contacted %>
            </td>

            <td>
              <%= a_transportation_company.chosen %>
            </td>

            <td>
              <%= a_transportation_company.price_options %>
            </td>

            <td>
              <%= a_transportation_company.deposit.round(0) %>%
            </td>

            <td>
              $<%= a_transportation_company.final_price.round(2) %>
            </td>

            <td>
              <%= a_transportation_company.notes %>
            </td>

            <td>
              <%= time_ago_in_words(a_transportation_company.created_at) %> ago
            </td>
            <td>
              <%= time_ago_in_words(a_transportation_company.updated_at) %> ago
            </td>

            <td>
              <a href="/transportation_companies/<%= a_transportation_company.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>
